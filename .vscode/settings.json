{
    "dart.flutterSdkPath": ".fvm/flutter_sdk",
    "dart.sdkPath": ".fvm/flutter_sdk/bin/cache/dart-sdk",
    "search.exclude": {
        "**/.fvm": true
    },
    "files.watcherExclude": {
        "**/.fvm": true
    },
    "dart.runPubGetOnPubspecChanges": "never",
    "files.insertFinalNewline": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
        80
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": true,
        "quickfix.insertSemicolon": true
    },
    // Code Spell Checker のアラート除外ワード（https://marketplace.visualstudio.com/items?itemName=streetsidesoftware.code-spell-checker）
    "cSpell.words": [
        "firebase",
        "firebaseapp",
        "firestore",
        "flutterfire",
        "json",
        "riverpod",
        "signin",
        "todo",
        "Todos"
    ]
}
